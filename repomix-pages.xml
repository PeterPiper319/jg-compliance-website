import Layout from '../layouts/BaseLayout.astro';
---

<Layout title="Thank You | JG Compliance">
  <main class="flex items-center justify-center min-h-[60vh] bg-gray-50 px-4">
    <div class="max-w-md w-full bg-white shadow-lg rounded-xl p-8 text-center border-t-4 border-brand-primary">
      
      <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-green-100 mb-6">
        <svg class="h-8 w-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>
      </div>

      <h1 class="text-2xl font-bold text-gray-900 mb-2">Message Received!</h1>
      <p class="text-gray-600 mb-8">
        Thanks for reaching out. We have received your inquiry and a compliance officer will be in touch shortly (usually within 2 hours).
      </p>

      <div class="space-y-3">
        <a 
          href="/" 
          class="block w-full py-3 px-4 bg-brand-primary hover:bg-brand-secondary text-white font-semibold rounded-lg transition duration-200"
        >
          Return to Home
        </a>
        <a 
          href="/services/cipc/new-company" 
          class="block w-full py-3 px-4 bg-white border border-gray-300 text-gray-700 hover:bg-gray-50 font-medium rounded-lg transition duration-200"
        >
          View Services
        </a>
      </div>
      
    </div>
  </main>
</Layout>
