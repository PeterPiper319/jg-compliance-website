// src/pages/services/cipc/new-company.astro
import BaseLayout from '../../../layouts/BaseLayout.astro';
import ServiceHero from '../../../components/ServiceHero.astro';
import { PRICING_2026 } from '../../../config/brand';
import { ROUTE_SEO, SITE_METADATA } from '../../../config/seo';

const { title: pageTitle, description: pageDescription } = ROUTE_SEO.newCompany;

// Structured Authority Signal: Service Schema
const schema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "New Company Registration (Pty) Ltd",
  "provider": {
    "@type": "ProfessionalService",
    "name": SITE_METADATA.legalName
  },
  "description": pageDescription,
  "offers": {
    "@type": "Offer",
    "price": PRICING_2026.ptyRegistration,
    "priceCurrency": "ZAR",
    "availability": "https://schema.org/OnlineOnly"
  }
};
---

