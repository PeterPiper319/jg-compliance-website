      </svg>
    </div>
    
    <span class="whitespace-nowrap font-bold text-sm tracking-wide opacity-0 group-hover:opacity-100 transition-opacity duration-300 delay-100">
      Chat on WhatsApp
    </span>
  </a>
</div>

<script define:vars={{ phoneNumber }}>
  // Contextual Logic
  const path = window.location.pathname;
  let msg = "Hi JG, I need assistance with compliance.";

  if (path.includes('annual-returns')) msg = "Hi JG, I need help with Annual Returns.";
  else if (path.includes('new-company')) msg = "Hi JG, I want to register a new company.";
  else if (path.includes('coida')) msg = "Hi JG, I need help with COIDA registration.";
  else if (path.includes('restoration')) msg = "Hi JG, I need to restore a deregistered company.";

  const link = document.getElementById('wa-link');
  if (link) {
    link.href = `https://wa.me/${phoneNumber}?text=${encodeURIComponent(msg)}`;
  }
</script>
</file>

