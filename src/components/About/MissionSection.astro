---
// src/components/About/MissionSection.astro
import { ABOUT_CONTENT } from '../../config/content';

const { pillars } = ABOUT_CONTENT.mission;
---

<section class="py-16 bg-white relative z-20 -mt-10">
  <div class="container mx-auto px-4">
    <div class="grid md:grid-cols-3 gap-8">
      {pillars.map((pillar, index) => (
        <div class="p-8 bg-white border border-brand-accent/20 rounded-xl shadow-sm hover:shadow-lg hover:border-brand-blue/30 transition-all duration-300 group">
          <div class="w-14 h-14 bg-brand-blue/5 rounded-2xl flex items-center justify-center mb-6 text-brand-blue group-hover:bg-brand-blue group-hover:text-white transition-colors">
            {/* Conditional Icon Logic based on Title */}
            {pillar.title === 'Risk' && (
                <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" /></svg>
            )}
            {pillar.title === 'Regulation' && (
                <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" /></svg>
            )}
            {pillar.title === 'Reputation' && (
                <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
            )}
          </div>
          <h3 class="text-xl font-bold text-brand-blue mb-3">{pillar.title}</h3>
          <p class="text-brand-grey leading-relaxed text-sm">{pillar.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>