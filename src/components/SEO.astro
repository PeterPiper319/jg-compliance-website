---
// src/components/SEO.astro
import { SITE_METADATA, JSON_LD } from '../config/seo';

interface Props {
  title: string;
  description: string;
  image?: string;
  schema?: object; // Page-specific schema (Service, FAQ, etc.)
}

const { title, description, image = '/logo1.png', schema } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

// Global Organization Schema (Baseline Authority)
const orgSchema = JSON_LD.organization;
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width" />
<link rel="icon" type="image/png" href="/logo1.png" />
<meta name="generator" content={Astro.generator} />

<meta name="google-site-verification" content="google16b29ea6283047c9" />

<link rel="canonical" href={canonicalURL} />

<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<meta property="og:type" content="website" />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(image, Astro.url)} />

<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonicalURL} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={new URL(image, Astro.url)} />

<meta name="robots" content="index, follow" />

<script is:inline type="application/ld+json" set:html={JSON.stringify(orgSchema)} />

{schema && (
  <script is:inline type="application/ld+json" set:html={JSON.stringify(schema)} />
)}