---
// src/pages/thank-you.astro
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = "Thank You - Submission Received";
const pageDescription = "We have received your inquiry.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <main class="container mx-auto px-4 py-32 text-center">
    
    <div class="w-24 h-24 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-8 text-green-600">
      <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
    </div>

    <h1 class="text-4xl font-bold text-brand-blue mb-4">Inquiry Received!</h1>
    
    <p class="text-xl text-brand-grey max-w-2xl mx-auto mb-8">
      Thank you for contacting JG Business Compliance. We have successfully received your details.
    </p>

    <div class="bg-white p-6 rounded-xl border border-brand-accent/20 max-w-lg mx-auto mb-10 shadow-sm">
      <h3 class="font-bold text-brand-blue mb-2">What happens next?</h3>
      <p class="text-sm text-brand-grey">
        A compliance consultant will review your request and contact you via <strong>Email or WhatsApp</strong> within 2 business hours.
      </p>
    </div>

    <a href="/" class="inline-block bg-brand-blue text-white px-8 py-3 rounded-lg font-bold hover:bg-brand-blue/90 transition-colors">
      Return to Home
    </a>

  </main>
</BaseLayout>
