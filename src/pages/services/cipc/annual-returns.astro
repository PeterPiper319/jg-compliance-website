---
// src/pages/services/cipc/annual-returns.astro
import BaseLayout from '../../../layouts/BaseLayout.astro';
import ServiceHero from '../../../components/ServiceHero.astro';
import { PRICING_2026 } from '../../../config/brand';
import { ROUTE_SEO, SITE_METADATA } from '../../../config/seo';

const { title: pageTitle, description: pageDescription } = ROUTE_SEO.annualReturns;

const schema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "CIPC Annual Returns Filing",
  "provider": {
    "@type": "ProfessionalService",
    "name": SITE_METADATA.legalName
  },
  "description": pageDescription,
  "serviceType": "Corporate Maintenance",
  "offers": {
    "@type": "Offer",
    "price": PRICING_2026.annualReturnSmall,
    "priceCurrency": "ZAR",
    "priceValidUntil": "2026-12-31"
  }
};
---

<BaseLayout title={pageTitle} description={pageDescription} schema={schema}>
  <ServiceHero 
    title={pageTitle}
    subtitle="Keep your company 'Active' and avoid final deregistration. We calculate your turnover fees and file directly."
    price={PRICING_2026.annualReturnSmall} 
    turnaround="1-2 Days"
  />

  <main class="container mx-auto px-4 py-16">
    <div class="max-w-3xl mx-auto">
      
      <div class="grid md:grid-cols-2 gap-8 mb-12">
        <div class="bg-red-50 p-6 rounded-lg border border-red-100">
           <h4 class="font-bold text-red-700 mb-2">Penalties Apply</h4>
           <p class="text-sm text-red-600">
             If you miss your filing month (the anniversary of your registration), CIPC adds a late penalty fee. 
             Two years of non-compliance leads to <strong>Deregistration</strong>.
           </p>
        </div>
        <div class="bg-amber-50 p-6 rounded-lg border border-amber-100">
           <h4 class="font-bold text-amber-700 mb-2">Beneficial Ownership</h4>
           <p class="text-sm text-amber-600">
             <strong>Hard Stop Active:</strong> You cannot file this return unless your BO Register is up to date.
             <a href="/services/cipc/beneficial-ownership" class="underline font-semibold block mt-1">Update BO Status &rarr;</a>
           </p>
        </div>
      </div>

      <div class="bg-brand-bg p-8 rounded-xl border border-brand-accent/20 text-center">
        <h3 class="text-xl font-bold text-brand-blue mb-2">File Before Deregistration</h3>
        <p class="mb-6 text-sm">We handle the turnover calculation and CIPC submission.</p>
        <a href="/contact?service=annual-returns" class="inline-block bg-brand-blue text-white px-8 py-3 rounded-lg font-semibold hover:bg-brand-blue/90 transition-colors">
          File Annual Return (R{PRICING_2026.annualReturnSmall})
        </a>
      </div>

    </div>
  </main>
</BaseLayout>
