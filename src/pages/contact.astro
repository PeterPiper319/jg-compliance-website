---
// src/pages/contact.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import ContactForm from '../components/ContactForm.astro';

const pageTitle = "Contact Us";
const pageDescription = "Get in touch with JG Business Compliance for expert assistance with CIPC and Labour registration.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <header class="bg-brand-bg pt-24 pb-12 text-center">
    <h1 class="text-4xl font-bold text-brand-blue mb-4">Get in Touch</h1>
    <p class="text-brand-grey max-w-2xl mx-auto">
      Have a question about your compliance status? Our team is ready to assist.
    </p>
  </header>

  <main class="container mx-auto px-4 pb-20">
    <div class="grid md:grid-cols-2 gap-12 max-w-5xl mx-auto">
      
      <div class="space-y-8">
        
        <div class="bg-white p-8 rounded-xl shadow-sm border border-brand-accent/20">
          <h3 class="text-xl font-bold text-brand-blue mb-6">Contact Details</h3>
          
          <div class="space-y-4">
            <div class="flex items-start gap-4">
              <div class="w-10 h-10 rounded-full bg-brand-blue/10 flex items-center justify-center text-brand-blue shrink-0">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
              </div>
              <div>
                <p class="text-sm text-brand-grey font-medium">Email Us</p>
                <a href="mailto:jillian@jgcompliance.co.za" class="text-lg font-bold text-brand-blue hover:underline">jillian@jgcompliance.co.za</a>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="w-10 h-10 rounded-full bg-brand-blue/10 flex items-center justify-center text-brand-blue shrink-0">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/></svg>
              </div>
              <div>
                <p class="text-sm text-brand-grey font-medium">WhatsApp / Call</p>
                <a href="tel:+27812876540" class="text-lg font-bold text-brand-blue hover:underline">+27 81 287 6540</a>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-brand-blue text-white p-8 rounded-xl shadow-lg relative overflow-hidden">
          <div class="relative z-10">
            <h3 class="text-xl font-bold mb-4">Business Hours</h3>
            <ul class="space-y-2 text-white/80">
              <li class="flex justify-between">
                <span>Monday - Thursday</span>
                <span class="font-medium text-white">08:00 - 15:45</span>
              </li>
              <li class="flex justify-between">
                <span>Friday</span>
                <span class="font-medium text-white">08:00 - 13:00</span>
              </li>
              <li class="flex justify-between pt-2 border-t border-white/20 mt-2">
                <span>Weekends</span>
                <span class="font-medium text-white">Closed</span>
              </li>
            </ul>
          </div>
          <div class="absolute -bottom-10 -right-10 w-32 h-32 bg-white/10 rounded-full blur-2xl"></div>
        </div>

      </div>

      <div>
        <ContactForm />
      </div>

    </div>
  </main>
</BaseLayout>
